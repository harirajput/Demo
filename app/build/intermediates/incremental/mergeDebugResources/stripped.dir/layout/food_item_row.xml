<?xml version="1.0" encoding="utf-8"?>

                                                                  
                                                            
 
    
                 
                           
                                                                

           
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            android:background="#f5f5f5"
            android:layout_marginBottom="8dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="3dp" android:tag="layout/food_item_row_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res-auto">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:transitionName="profile"
                    android:id="@+id/header">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Roboto-Medium.ttf"
                        android:textSize="14sp"
                        android:id="@+id/name"
                        android:textColor="#424242"
                        android:layout_marginStart="8dp"
                        android:text="Name"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Roboto-Light.ttf"
                        android:textColor="#4e4e4e"
                        android:textSize="10sp"
                        android:layout_marginStart="8dp"
                        android:layout_below="@+id/name"
                        android:id="@+id/time"
                        android:text="username"/>
            </RelativeLayout>

    </android.support.v7.widget.CardView>
         